{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "userAccounts": {
      ".indexOn": "auth_uid"
    },
    "userProfiles": {
      ".read": true,
    	".indexOn": "username"
    },
    "privateGrades": {
      "$uid": {
        ".indexOn": "timestamp"
      }
    },
    "checkIns": {
      "$uid": {
        ".indexOn": "in"
      }
    },
    "businessProfiles": {
      "$uid": {
        ".indexOn": "name"
      }
    }
  }
}
