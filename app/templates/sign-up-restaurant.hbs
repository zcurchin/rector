<div class="gate-title">Sign Up Business</div>
<div class="form">
  {{#paper-form onSubmit=(action "signUpRestaurant") as |form|}}
    {{paper-input required=true label="First Name" type="text" value=first_name onChange=(action (mut first_name))}}
    {{paper-input required=true label="Last Name" type="text" value=last_name onChange=(action (mut last_name))}}
    {{paper-input required=true label="E-mail" type="email" value=email onChange=(action (mut email))}}
    {{paper-input required=true label="Password" type="password" value=password onChange=(action (mut password))}}

    <div class="preloader {{if preloader 'visible' 'hidden'}}">
      {{paper-progress-linear}}
    </div>

    <div class="remote-error">{{error_msg}}</div>

    <div class="filled-btn centered" {{action form.onSubmit}}>Create Account</div>
  {{/paper-form}}
</div>
<div class="outline-btn centered" {{action "cancel"}}>Cancel</div>
