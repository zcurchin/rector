{{user-list-item
  user=user
  icon="star"
  toggle=true
  action=(action "toggleGrading")
}}

{{#if selected}}
  <div class="grading-box layout-row layout-align-start-center">
    <div class="star-box grade-{{grade}}">
      <div class="star-1" {{action "setGrade" 1}}>{{paper-icon "star"}}</div>
      <div class="star-2" {{action "setGrade" 2}}>{{paper-icon "star"}}</div>
      <div class="star-3" {{action "setGrade" 3}}>{{paper-icon "star"}}</div>
      <div class="star-4" {{action "setGrade" 4}}>{{paper-icon "star"}}</div>
      <div class="star-5" {{action "setGrade" 5}}>{{paper-icon "star"}}</div>
      <div class="nei-icon" {{action "setGrade" 0}}>{{paper-icon "visibility-off"}}</div>
    </div>

    <span class="flex"></span>

    <div class="add-comment-btn {{if showComment "active"}}" {{action "toggleComment"}}>
      {{paper-icon "chat"}}
    </div>
  </div>

  {{#if nei}}
    <div class="nei">
      I don't have enough informations to grade this user.
    </div>
  {{/if}}

  {{#if showComment}}
    {{paper-input
      label="Write Comment"
      textarea=true
      block=true
      value=comment
      maxlength=150
      passThru=(hash rows=1 maxRows=10)
      onChange=(action (mut comment))
    }}
  {{/if}}

  <div class="preloader {{if showPreloader "visible"}}">
    {{paper-progress-linear}}
  </div>

  <div class="outline-btn" {{action "confirmGrade" user.id}}>Grade {{user.first_name}} {{user.last_name}}</div>
{{/if}}
