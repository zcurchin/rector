
<div class="sign-in">
  {{paper-input label="email" type="email" value=email onChange=(action (mut email))}}
  {{paper-input label="password" type="password" value=password onChange=(action (mut password))}}

  {{#if error_msg}}
    <!-- {{paper-icon "error" size=24}} -->
    <h5>{{error_msg}}</h5>
  {{/if}}

  {{#paper-button raised=true primary=true onClick=(action "signIn")}}Sign In{{/paper-button}}
  {{#paper-button noink=true primary=true onClick=(action "signUp")}}Create Account{{/paper-button}}
</div>
