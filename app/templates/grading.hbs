{{#app-page title="Grading"}}
  {{#if yesterday}}
    <div class="yesterday-grading-box">
      <div class="layout-row layout-align-start-center">
        <div class="yesterday">For Yesterday</div>
        <span class="flex"></span>
        <div>{{yesterday}}</div>
        <div class="toggle-btn" {{action "toggleYesterdayInfo"}}>
          {{#if yesterdayInfo}}
            {{paper-icon "info"}}
          {{else}}
            {{paper-icon "info-outline"}}
          {{/if}}
        </div>
      </div>

      {{#if yesterdayInfo}}
        <p>
Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean tempus lacus non ipsum consequat dapibus. In tempor eros a arcu fringilla pretium. Cras facilisis lobortis erat, eu semper ante vestibulum in. Etiam et libero tortor.</p>
      {{/if}}
    </div>

  {{/if}}
  {{#app-page-card
    title="Users to grade"
    resizeable=true
    info="Those are available users that you can grade at the moment."
  }}
    {{#if model.checkedInToday}}
      {{#if model.gradableUsers}}
        {{#each model.gradableUsers as |profile|}}
          {{gradable-user
            preloader=preloader
            first_name=profile.first_name
            last_name=profile.last_name
            profile_image=profile.profile_image
            profile_id=profile.id
          action="gradeUser"}}
        {{/each}}

        {{else}}
          <div class="info-message">
            No gradable users at this moment
          </div>
        {{/if}}
    {{else}}
      <div class="info-message">
        You didn't checked in today. In order to grade other users you have to be checked in today at least once.
      </div>
    {{/if}}
  {{/app-page-card}}

  {{#app-page-card
    title="Today's History"
    resizeable=true
    info="Those are grades you gave recently."
  }}
    {{#if model.history}}
      {{#each model.history as |user|}}
        <div class="history-item layout-row layout-align-start-center">
          <div class="avatar">
            {{#if user.profile_image}}
              <img class="flex-none" src="{{user.profile_image}}">
            {{else}}
              {{paper-icon "account-circle"}}
            {{/if}}
          </div>

          <div class="user-info-box">
            <p class="name">{{user.first_name}} {{user.last_name}}</p>
            <p class="date">at {{moment-format user.grade_timestamp "h:mm a"}}</p>
          </div>

          {{#if user.grade_value}}
            <div class="grade-value number">
              {{user.grade_value}}
            </div>
          {{else}}
            <div class="grade-value">
              {{paper-icon "visibility-off"}}
            </div>
          {{/if}}

        </div>
      {{/each}}

    {{else}}
      <div class="info-message">
        You didn't grade anyone so far.
      </div>
    {{/if}}
  {{/app-page-card}}
{{/app-page}}
