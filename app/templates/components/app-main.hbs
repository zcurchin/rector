<div class="top-bar layout-row layout-align-start-center">
  <div class="logo">YoGrade</div>

  <span class="flex"></span>

  {{#if session.isAuthenticated}}
    {{#paper-sidenav-toggle name="left" as |toggleAction|}}
      {{#paper-button iconButton=true classNames="hide-gt-sm menu-btn" onClick=(action toggleAction)}}
        {{paper-icon "more-vert"}}
      {{/paper-button}}
    {{/paper-sidenav-toggle}}

  {{else}}
    {{#if createAccount}}
      <div class="outline-btn" {{action "goToCreateAccount"}}>Create Account</div>
    {{else}}
      <div class="outline-btn" {{action "goToSignIn"}}>Sign In</div>
    {{/if}}
  {{/if}}
</div>

{{#paper-sidenav-container class="inner-sidenav"}}
  {{#if session.isAuthenticated}}
    {{#paper-sidenav
      name="left"
      open=leftSideBarOpen
      onToggle=(action (mut leftSideBarOpen))
    }}
      {{#paper-content}}
        {{#link-to "checking"}}
          {{#paper-item}}
            {{paper-icon "dashboard"}}
            <p>Check In/Out</p>
          {{/paper-item}}
        {{/link-to}}

        {{#link-to "grading"}}
          {{#paper-item}}
            {{paper-icon "grade"}}
            <p>Grading</p>
          {{/paper-item}}
        {{/link-to}}

        {{#link-to "ranking"}}
          {{#paper-item}}
            {{paper-icon "equalizer"}}
            <p>Ranking</p>
          {{/paper-item}}
        {{/link-to}}

        {{#link-to "notifications"}}
          {{#paper-item}}
            {{paper-icon "notifications"}}
            <p>Notifications</p>
          {{/paper-item}}
        {{/link-to}}

        {{paper-divider}}

        {{#link-to "profile"}}
          {{#paper-item}}
            {{paper-icon "account-circle"}}
            <p>Profile</p>
          {{/paper-item}}
        {{/link-to}}

        {{#link-to "account"}}
          {{#paper-item}}
            {{paper-icon "folder-shared"}}
            <p>Account</p>
          {{/paper-item}}
        {{/link-to}}

        <!-- {{#link-to "statistics"}}
          {{#paper-item}}
            {{paper-icon "timeline"}}
            <p>Statistics</p>
          {{/paper-item}}
        {{/link-to}} -->

        {{paper-divider}}

        {{#paper-item onClick=(action "signOut")}}
          {{paper-icon "lock"}}
          <p>Sign Out</p>
        {{/paper-item}}

      {{/paper-content}}
    {{/paper-sidenav}}
  {{/if}}

  {{#paper-card-content}}
    {{outlet}}
  {{/paper-card-content}}

{{/paper-sidenav-container}}
