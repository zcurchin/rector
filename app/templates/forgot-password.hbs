{{#app-page title="Forgot Password" class="centered"}}
  {{#app-page-card header=false class="form"}}
    {{#if success_sent}}
      <p class="card-info no-border">We sent you the instructions on your email. After you change your password you're going to be able to sign in with your new password.</p>
      <div class="outline-btn centered" {{action "cancel"}}>Sign In</div>
    {{else}}

      <p class="card-info no-border">Enter your email address associated with your account and we'll send you an email that will help you create a new password for your account</p>
      {{#paper-form onSubmit=(action "resetPassword") as |form|}}
        {{#paper-form onSubmit=(action "resetPassword") as |form|}}

          {{paper-input
            label="email"
            type="email"
            value=email
            required=true
            onChange=(action (mut email))
            class="padding"
          }}

          {{#if error_msg}}
            <div class="remote-error">{{error_msg}}</div>
          {{/if}}

          <div class="preloader {{if preloader 'visible' 'hidden'}}">
            {{paper-progress-linear}}
          </div>

          <div class="filled-btn centered" {{action form.onSubmit}}>Send Instructions</div>

          <div class="outline-btn centered" {{action "cancel"}}>Cancel</div>
        {{/paper-form}}
      {{/paper-form}}

      {{/if}}
  {{/app-page-card}}
{{/app-page}}
