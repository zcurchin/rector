
<div class="sign-in">
  {{#paper-form onSubmit=(action "signIn") as |form|}}

    {{paper-input
      label="email"
      type="email"
      value=email
      required=true
      onChange=(action (mut email))
    }}

    {{paper-input
      label="password"
      type="password"
      value=password
      required=true
      minlength=6
      onChange=(action (mut password))
    }}

    {{#if error_msg}}
      <div class="remote-error">{{error_msg}}</div>
    {{/if}}

    <div class="preloader {{if preloader 'visible' 'hidden'}}">
      {{paper-progress-linear}}
    </div>

    <div class="filled-btn" {{action form.onSubmit}}>Sign In</div>

    <div class="outline-btn" {{action "forgottenPassword"}}>Forgotten Password</div>
  {{/paper-form}}
</div>
